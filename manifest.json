{
  "name": "My Bookmarks Manager",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Simple, easy to use bookmarks manager.",
  "homepage_url": "http://harrymt.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "bookmarks",
    "chrome://favicon/",
    "history",
    "notifications",
    "tabs",
    "https://*/*"
  ]
}